{
  "private": true,
  "name": "root",
  "version": "1.6.5",
  "scripts": {
    "lint": "lerna exec --ignore @gemjs/config -- tsc --noEmit && eslint --ext .ts,.tsx,.js,.jsx packages/*/src/",
    "test": "lerna exec --scope @mantou/gem --scope gem-book -- yarn test",
    "release": "lerna version",
    "prepare": "husky install && yarn --cwd packages/gem build && yarn --cwd packages/gem-book build && yarn --cwd packages/gem-book link"
  },
  "devDependencies": {
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "typescript": "^4.5.0"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "workspaces": [
    "packages/*"
  ]
}

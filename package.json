{
  "name": "@mantou/gem",
  "version": "0.4.1",
  "description": "💎 使用自定义元素的轻量级 WebApp 开发框架",
  "main": "index.js",
  "files": [
    "/index.js",
    "/index.js.map",
    "/index.d.ts",
    "/index.d.ts.map",
    "/umd.js",
    "/umd.js.map",
    "/umd.d.ts",
    "/umd.d.ts.map",
    "/elements/",
    "/lib/",
    "/helper/",
    "/src/"
  ],
  "typings": "index.d.ts",
  "scripts": {
    "lint": "tsc --noEmit && eslint --ext .ts --fix src/",
    "clean": "node -e \"fs.readdirSync('src').map(dir => require('rimraf').sync(dir))\"",
    "build:examples": "rimraf build && node scripts/build-examples.js",
    "build:module": "npm run clean && tsc",
    "build:umd": "webpack --config umd.webpack.config.js",
    "build": "npm run build:module && npm run build:umd",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "example": "webpack-dev-server",
    "example:index": "cross-env NAME=index EXAMPLES=index,hello-world  npm run example",
    "test": "npm run build && karma start --coverage",
    "test:bs": "npm run build &&  karma start karma.bs.config.js --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mantou132/gem.git"
  },
  "keywords": [
    "web",
    "webcomponents",
    "global state management",
    "web framework"
  ],
  "author": "mantou132",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mantou132/gem/issues"
  },
  "homepage": "https://github.com/mantou132/gem#readme",
  "dependencies": {
    "lit-html": "^1.2.0"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.5.7",
    "@open-wc/testing-karma": "^3.3.8",
    "@open-wc/testing-karma-bs": "^1.3.52",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "html-webpack-plugin": "^4.0.0-beta.14",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "ora": "^4.0.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}

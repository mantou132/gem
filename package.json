{
  "name": "@mantou/gem",
  "version": "0.1.12",
  "description": "快速基于 WebComponents 创建 App",
  "main": "index.js",
  "module": "index.js",
  "files": [
    "/index.js",
    "/index.js.map",
    "/index.d.ts",
    "/index.d.ts.map",
    "/elements/",
    "/lib/",
    "/src/"
  ],
  "typings": "index.d.ts",
  "scripts": {
    "lint": "tsc --noEmit && eslint --ext .ts --fix src/",

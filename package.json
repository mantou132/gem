{
  "name": "@mantou/gem",
  "version": "1.6.3",
  "description": "💎 使用自定义元素的轻量级 WebApp 开发框架",
  "main": "index.js",
  "module": "index.js",
  "exports": {
    ".": "./index.js",
    "./elements/*": "./elements/*.js",
    "./helper/*": "./helper/*.js"
  },
  "files": [
    "/index.*",
    "/umd.*",
    "/elements/",
    "/lib/",
    "/helper/",
    "/src/"
  ],
  "typings": "index.d.ts",
  "scripts": {
    "docs": "npx gem-book docs",
    "build:docs": "yarn docs -- --build",
    "lint": "tsc --noEmit && eslint --ext .ts --fix src/",
    "clean": "node -e \"fs.readdirSync('src').map(dir => require('rimraf').sync(dir))\"",
    "example": "cross-env NODE_ENV=development webpack serve",
    "build:examples": "rimraf build && node scripts/build-examples",
    "build:module": "yarn clean && tsc",
    "build:umd": "cross-env NODE_ENV=production webpack --config webpack.config.umd.js",
    "build": "yarn build:module && yarn build:umd",
    "prepare": "yarn build",
    "prepublishOnly": "yarn lint && yarn test",
    "release": "node scripts/release",
    "test": "yarn build:module && karma start --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mantou132/gem.git"
  },
  "keywords": [
    "web",
    "webcomponents",
    "global state management",
    "web framework"
  ],
  "author": "mantou132",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mantou132/gem/issues"
  },
  "homepage": "https://github.com/mantou132/gem#readme",
  "dependencies": {
    "lit-html": "^1.4.1"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.5.33",
    "@open-wc/testing-karma": "^4.0.9",
    "@open-wc/testing-karma-bs": "^1.3.94",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "inquirer": "^8.1.0",
    "lint-staged": "^11.0.0",
    "ora": "^5.4.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}

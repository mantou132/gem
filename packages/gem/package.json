{
  "name": "@mantou/gem",
  "version": "1.7.12",
  "description": "💎 使用自定义元素的轻量级 WebApp 开发框架",
  "keywords": [
    "frontend",
    "web components",
    "custom elements",
    "global state management",
    "framework"
  ],
  "esm.sh": {
    "bundle": false
  },
  "main": "index.js",
  "module": "index.js",
  "exports": {
    ".": "./index.js",
    "./lib/*": "./lib/*.js",
    "./elements/*": "./elements/*.js",
    "./helper/*": "./helper/*.js"
  },
  "files": [
    "/index.*",
    "/dist/",
    "/elements/",
    "/lib/",
    "/helper/",
    "/src/"
  ],
  "typings": "index.d.ts",
  "scripts": {
    "docs": "GEM_BOOK_REPLACE=true gem-book docs",
    "docs:remote": "yarn docs",
    "build:docs": "yarn docs --build",
    "build:module": "tsc -p tsconfig.build.json",
    "build:lib": "vite build",
    "build": "yarn build:module && yarn build:lib",
    "start": "yarn build:module --watch",
    "test": "yarn build:module && cross-env NODE_OPTIONS=--no-experimental-fetch wtr"
  },
  "dependencies": {
    "lit-html": "^1.4.1"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@gemjs/config": "^1.6.14",
    "@open-wc/testing": "^2.5.33",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/test-runner": "^0.18.1",
    "rimraf": "^3.0.2",
    "typescript": "^5.4.3",
    "vite": "^5.2.10"
  },
  "author": "mantou132",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mantou132/gem.git",
    "directory": "packages/gem"
  },
  "bugs": {
    "url": "https://github.com/mantou132/gem/issues"
  },
  "homepage": "https://github.com/mantou132/gem#readme"
}
